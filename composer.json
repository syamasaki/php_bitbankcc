{
  "name": "syamasaki/php_bitbankcc",
  "description": "This is php client implementation for Bitbankcc API",
  "require": {
    "guzzlehttp/guzzle" :  "~6.3.0",
    "vlucas/phpdotenv": "2.3",
    "symfony/options-resolver" : "^3.4",
    "jwage/purl": "0.0.9"
  },
  "require-dev": {
    "phpunit/phpunit": "4.6",
    "squizlabs/php_codesniffer": "2.*",
    "phpmd/phpmd" : "2.*"
  },
  "autoload": {
    "psr-4": {
      "PhpBitbankcc\\": "lib/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ]
  }
}
